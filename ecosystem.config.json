{
  "apps": [
    {
      "name": "ai-image-app",
      "script": "server.js",
      "instances": "max",
      "exec_mode": "cluster",
      "watch": false,
      "max_memory_restart": "1G",
      "node_args": "--experimental-modules --es-module-specifier-resolution=node",
      "env": {
        "NODE_ENV": "production",
        "PORT": 3001
      },
      "log_date_format": "YYYY-MM-DD HH:mm:ss",
      "merge_logs": true,
      "error_file": "logs/error.log",
      "out_file": "logs/out.log",
      "time": true
    }
  ]
}